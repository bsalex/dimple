{
  "extends": "standard",
  "rules": {
    "quotes": 0,
    "indent": 0,
    "semi": ["error", "always"],
    "one-var": ["error", "always"],
    "new-cap": ["error", { "newIsCap": false }],
    "spaced-comment": 0,
    "no-multiple-empty-lines": 0,
    "key-spacing": 0,
    "padded-blocks": 0,
    "operator-linebreak": 0,
    "no-trailing-spaces": 0,
    "no-multi-spaces": 0,
    "no-throw-literal": 0,
    "no-undef": 0,
    "eol-last": 0,
    "space-before-function-paren": 0
  }
}